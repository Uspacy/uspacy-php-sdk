{
    "name": "uspacy/uspacy-php-sdk",
    "type": "library",
    "description": "PHP SDK for Uspacy â€“ a single workspace for managing key processes of your organization with a focus on results.",
    "keywords": [
        "crm",
        "sdk",
        "uspacy",
        "api",
        "messenger"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kyrylo Melnychuk",
            "email": "km@uspacy.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "saloonphp/saloon": "^3.14.0",
        "saloonphp/laravel-plugin": "^3.6.0"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^12.6"
    },
    "autoload": {
        "psr-4": {
            "Uspacy\\SDK\\": "src/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs",
        "lint:fix": "composer run lint -- --fix"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
